<div class="w3-row">
  <div class="w3-col m8 w3-center">
    <!-- Tease -->
    <div class="w3-section">
      <h2>{% editable_text "slides", format: 'raw', rows: 1 %}{% endeditable_text %}</h2>
    </div>
    <!-- Slider -->
    {% with_scope active: true %}
    {% for slide in contents.slides %}
    <div class="w3-display-container w3-animate-opacity mySlides slider">
      <img src="{{slide.picture.url | resize: '530x340#'}}">
      <div class="w3-display-topleft w3-text-white w3-container w3-padding-hor-32 w3-hide-small">
        <span class="w3-white w3-padding-large w3-animate-bottom">{{slide.title}}</span>
      </div>
    </div>
    {% endfor %}
    {% endwith_scope %}
  </div>
  <div class="w3-col m4 w3-center">
    <!-- Tease -->
    <div class="w3-section">
      <h2>{% editable_text "promo", format: 'raw', rows: 1 %}{% endeditable_text %}</h2>
    </div>
      {% editable_text "item", format: 'raw' %}{% endeditable_text %}
  </div>
</div>